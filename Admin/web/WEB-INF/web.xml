<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Fetch</servlet-name>
        <servlet-class>mypro.Fetch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FetchAll</servlet-name>
        <servlet-class>mypro.FetchAll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertMovie</servlet-name>
        <servlet-class>mypro.InsertMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMovie</servlet-name>
        <servlet-class>mypro.UpdateMovie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMovie</servlet-name>
        <servlet-class>mypro.DeleteMovie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Fetch</servlet-name>
        <url-pattern>/Fetch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FetchAll</servlet-name>
        <url-pattern>/FetchAll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertMovie</servlet-name>
        <url-pattern>/InsertMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMovie</servlet-name>
        <url-pattern>/UpdateMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMovie</servlet-name>
        <url-pattern>/DeleteMovie</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
